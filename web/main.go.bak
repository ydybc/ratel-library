func main() {
	//-------------------初始化变量-------------------------------------
	var configDir string
	appcli := cli.NewApp()
	appcli.Name = "RatelWebServer"
	appcli.Version = "1.0.0"
	appcli.Flags = []cli.Flag{
		cli.StringFlag{
			Name:        "config,c",
			Value:       "config.toml",
			Usage:       "is config dir",
			Destination: &configDir,
		},
	}
	appcli.Action = func(c *cli.Context) error {
		fmt.Printf("start RatelWebServer")
		return nil
	}
	// 接受os.Args启动程序
	appcli.Run(os.Args)
