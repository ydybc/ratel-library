	// 可以从任何http相关的恐慌中恢复
	// 并将请求记录到终端。
	app.Use(recover.New())
	app.Use(logger.New())
	//app.Logger().SetLevel("debug")
	app.Logger().SetLevel("error")
	app.Logger().SetOutput(f)
	////注册域名头
	//www := app.Subdomain("www")
	www := app.WWW()
	/////错误控制
